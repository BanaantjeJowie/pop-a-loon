{
  "name": "Pop-a-loon",
  "version": "1.0.0",
  "description": "A fun Chrome extension that lets balloons rise on your screen",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_icon": "./resources/images/icon.png",
    "default_title": "Pop-a-loon",
    "default_popup": "./dist/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./dist/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["resources/images/icon.png"]
    },
    {
      "matches": ["<all_urls>"],
      "resources": ["resources/audio/pop.mp3"]
    }
  ],
  "manifest_version": 3
}
