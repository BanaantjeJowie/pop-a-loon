{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "./build/",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./popup/components/*"]
    }
  }
}
